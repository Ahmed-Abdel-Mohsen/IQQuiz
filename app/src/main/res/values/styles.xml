<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_textview" parent="@style/standard">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="radio_button" parent="@style/standard">
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="question_number_textview" parent="@style/standard">
        <item name="android:textColor">#F44336</item>
    </style>

    <style name="question_textview" parent="@style/standard">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#F44336</item>
    </style>

    <style name="solution" parent="@style/standard">
        <item name="android:textColor">#2196F3</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="button" parent="@style/standard">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:background">#FFEB3B</item>
        <item name="android:onClick">Submit</item>
        <item name="android:text">Submit</item>
    </style>

    <style name="radiogroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edittext" parent="@style/standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:hint">@string/question5_hint</item>
        <item name="android:textColorHint">#2196F3</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="relative_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>
